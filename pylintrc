disable=
    bad-continuation,
    bad-whitespace,
    line-too-long,
    # These have nothing to do with black, they are just annoying
    fixme,
    too-few-public-methods,
    too-many-arguments,
    too-many-branches,
    too-many-locals,
    too-many-nested-blocks,
    too-many-statements,
    too-many-instance-attributes

[format]

string-quote=double
