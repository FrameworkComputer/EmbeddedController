config CROS_EC_RUNTIME_KEYS
	bool "Runtime keys support"
	depends on DT_HAS_CROS_EC_RUNTIME_KEYS_ENABLED
	depends on INPUT
	default y
	help
	  Enable support for detecting runtime keys combination to make the AP
	  reboot or enter hibernate mode.
