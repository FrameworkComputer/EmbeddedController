config EMUL_ICM42607
	bool "icm42607 emulator"
	default y
	depends on DT_HAS_ZEPHYR_ICM42607_EMUL_ENABLED
	select EMUL_COMMON_I2C
	help
	  Enable the ICM42607 accelerometer and gyroscope emulator.

