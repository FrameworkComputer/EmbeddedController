config BOARD_LOTUS
	bool "Framework Lotus Board"
	help
	  Build Framework Lotus reference board. Lotus has AMD SoC
	  with NPCX993FA0BX EC.

config BOARD_AZALEA
	bool "Framework Azalea Board"
	help
	  Build Framework Azalea reference board. Azalea has AMD SoC
	  with NPCX993FA0BX EC.

config BOARD_MARIGOLD
	bool "Framework Marigold Board"
	help
	  Build Framework Marigold reference board. Marigold has Intel SoC
	  with NPCX993FA0BX EC.

# Project Configuration
config CHIPSET_INTEL
	bool "Framework Intel project"
	default n
	help
	  Framework project which uses the Intel chipset.
	  Enable the Intel feature.

config CHIPSET_AMD
	bool "Framework AMD project"
	default n
	help
	  Framework project which uses the AMD chipset.
	  Enable the AMD feature.

config PD_CHIP_CCG8
	bool "Select CCG8 PD chip"
	default n
	help
	  Framework project which uses the CCG8 PD chips.
	  Enable CCG8 PD feature.

config PD_CCG8_EPR
	bool "Enable Cypress CCG8 EPR"
	default n
	depends on PD_CHIP_CCG8
	help
		Support Cypress CCG8 EPR function, this featurn can
		support more higer powerful adp.

config PD_CHIP_CCG6
	bool "Select CCG6 PD chip"
	default n
	help
	  Framework project which uses the CCG6 PD chips.
	  Enable CCG6 PD feature.

config PD_CCG6_ERROR_RECOVERY
	bool "Enable CCG6 customize error recovery"
	default n
	depends on PD_CHIP_CCG6
	help
		Enable Cypress CCG6 special error recovery, when bootup to S0
		will execute reconnect port.

config PD_CCG6_EC_UART_DEBUG_PORT
	int "EC uart debug port"
	default 0
	depends on PD_CHIP_CCG6
	help
		EC needs to switch the external mux to turn on the path for EC
		uart.

config PD_CCG6_SOC_UART_DEBUG_PORT
	int "SoC uart debug port"
	default 1
	depends on PD_CHIP_CCG6
	help
		EC needs to switch the external mux to turn on the path for SoC
		uart.

config PD_COMMON_VBUS_CONTROL
	bool "Enable CCG common vbus control"
	help
		Enable Cypress CCG common vbus control, if not enable please modify
		board_set_active_charge_port at board for customize vbus control.

config PLATFORM_SIMPLE_VERSION_SHIFT_IDX
	int "Shift idx for return commit id to BIOS"
	default 18
	help
		The simple version will take commit from EC_IMAGE_RO, than we should shift
		idx for retrieve commit id example ec:xxxxxx.

config PLATFORM_MULTI_LED_FREQ
	int "set the framework multifunction led flash frequency"
	default 1000
	help
		The multifunction LED flash frequency is different on each project, use this
		to configure the frequency. (unit milli period)

module = FRAMEWORK
module-str = FRAMEWORK board-specific code
source "subsys/logging/Kconfig.template.log_config"

source "Kconfig.zephyr"
