#include <usbc-policy.dtsi>

/ {
	usbc: usbc-ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port0@0 {
			compatible = "named-usbc-port";
			reg = <0>;
			chg = <&charger>;
			pdc = <&pd_pow_port0>;
			policy = <&cros_policy>;
		};
		port1@1 {
			compatible = "named-usbc-port";
			reg = <1>;
			pdc = <&pd_pow_port1>;
			policy = <&cros_policy>;
		};
	};
};
