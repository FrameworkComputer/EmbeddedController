/ {
	named-pwms {
		compatible = "named-pwms";

		pwm_fan: ec_fan_pwm {
			pwms = <&pwm0 0 0>;
			frequency = <25000>;
		};
		led_charge: ec_pwm_led_chrg_l {
			pwms = <&pwm2 0 0>;
			frequency = <100>;
		};
		led_full: ec_pwm_led_full_l {
			pwms = <&pwm3 0 0>;
			frequency = <100>;
		};
	};
};

/* Fan control */
&pwm0 {
	status = "okay";
	drive-open-drain;
};

/* Amber charging LED */
&pwm2 {
	status = "okay";
	clock-bus = "NPCX_CLOCK_BUS_LFCLK";
};

/* Green full LED */
&pwm3 {
	status = "okay";
	clock-bus = "NPCX_CLOCK_BUS_LFCLK";
};
