# Zephyr Kernel Configuration
CONFIG_SOC_SERIES_NPCX7=y
CONFIG_SOC_NPCX7M7FC=y

# Platform Configuration
CONFIG_BOARD_VOLTEER=y

# Serial Drivers
CONFIG_SERIAL=y
