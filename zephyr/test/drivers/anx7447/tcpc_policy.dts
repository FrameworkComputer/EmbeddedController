#include <dt-bindings/usb_pd_tcpm.h>

/ {
	usbc {
		port0@0 {
			compatible = "named-usbc-port";
			tcpc = <&anx7447_emul>;
		};
	};
};

&i2c0 {
	status="okay";

	anx7447_emul: anx7447_emul@2c {
		compatible = "cros,anx7447-emul";
		reg = <0x2c>;
		tcpc-flags = <(
			TCPC_FLAGS_VBUS_MONITOR |
			TCPC_FLAGS_ALERT_OD |
			TCPC_FLAGS_CONTROL_VCONN |
			TCPC_FLAGS_CONTROL_FRS)>;
	};
};

