/* Based off of `ec/zephyr/program/brox/led_policy.dtsi`
 * Modified led-colors to obtain better test coverage.
 */

#include <dt-bindings/battery.h>

/ {
	led-colors {
		compatible = "cros-ec,led-policy";

		power-state-charge {
			charge-state = "LED_PWRS_CHARGE";

			battery-led {
				led-id = "EC_LED_ID_BATTERY_LED";

				color-0 {
					led-color = "LED_WHITE";
				};
			};
		};

		power-state-near-full {
			charge-state = "LED_PWRS_CHARGE_NEAR_FULL";

			battery-led {
				led-id = "EC_LED_ID_BATTERY_LED";

				color-0 {
					led-color = "LED_BLUE";
				};
			};
		};

		power-state-discharge {
			charge-state = "LED_PWRS_DISCHARGE";

			battery-led {
				led-id = "EC_LED_ID_BATTERY_LED";

				color-0 {
					led-color = "LED_OFF";
				};
			};
		};

		power-state-error-left-low {
			charge-state = "LED_PWRS_ERROR";
			charge-port = <1>; /* Left port */
			batt-lvl = <BATTERY_LEVEL_EMPTY BATTERY_LEVEL_LOW>;

			battery-led {
				led-id = "EC_LED_ID_BATTERY_LED";
				/* Blue 1 sec, White 1 sec */
				color-0 {
					led-color = "LED_BLUE";
					period-ms = <1000>;
				};
				color-1 {
					led-color = "LED_WHITE";
					period-ms = <1000>;
				};
			};
		};

		power-state-error-left-high {
			charge-state = "LED_PWRS_ERROR";
			charge-port = <1>; /* Left port */
			batt-lvl = <(BATTERY_LEVEL_LOW + 1) BATTERY_LEVEL_FULL>;

			battery-led {
				led-id = "EC_LED_ID_BATTERY_LED";
				/* Blue 1 sec, White 1 sec */
				color-0 {
					led-color = "LED_BLUE";
					period-ms = <1000>;
				};
				color-1 {
					led-color = "LED_WHITE";
					period-ms = <1000>;
				};
			};
		};

		power-state-error-right {
			charge-state = "LED_PWRS_ERROR";
			charge-port = <0>; /* Right port */
			/* Battery is charging */
			batt-state-mask = <SB_STATUS_DISCHARGING>;
			batt-state = <0>;

			battery-led {
				led-id = "EC_LED_ID_BATTERY_LED";
				/* Blue 1 sec, White 1 sec */
				color-0 {
					led-color = "LED_BLUE";
					period-ms = <1000>;
				};
				color-1 {
					led-color = "LED_WHITE";
					period-ms = <1000>;
				};
			};
		};

		power-state-forced-idle {
			charge-state = "LED_PWRS_FORCED_IDLE";

			battery-led {
				led-id = "EC_LED_ID_BATTERY_LED";
				color-0 {
					led-color = "LED_OFF";
				};
			};
		};

		power-state-idle {
			charge-state = "LED_PWRS_IDLE";

			battery-led {
				led-id = "EC_LED_ID_BATTERY_LED";
				color-0 {
					led-color = "LED_OFF";
				};
			};
		};

		chipset-state-s0 {
			chipset-state = "POWER_S0";

			power-led {
				led-id = "EC_LED_ID_SYSRQ_DEBUG_LED";

				color-0 {
					led-color = "LED_BLUE";
				};
			};
		};

		chipset-state-s3 {
			chipset-state = "POWER_S3";

			power-led {
				led-id = "EC_LED_ID_SYSRQ_DEBUG_LED";

				color-0 {
					led-color = "LED_WHITE";
				};
			};
		};

		chipset-state-s5 {
			chipset-state = "POWER_S5";

			power-led {
				led-id = "EC_LED_ID_SYSRQ_DEBUG_LED";

				color-0 {
					led-color = "LED_OFF";
				};
			};
		};
	};
};
